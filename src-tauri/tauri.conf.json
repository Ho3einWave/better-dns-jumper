{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "better-dns-jumper",
  "version": "0.1.2",
  "identifier": "ir.betterdnsjumper.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Better DNS Jumper",
        "width": 700,
        "height": 450,
        "shadow": false,
        "resizable": false,
        "backgroundColor": "#09090b"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}