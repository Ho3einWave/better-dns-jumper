{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Better DNS Jumper",
    "version": "0.4.0",
    "identifier": "ir.betterdnsjumper.app",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Better DNS Jumper",
                "width": 850,
                "height": 520,
                "shadow": false,
                "resizable": false,
                "backgroundColor": "#09090b"
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "createUpdaterArtifacts": true,
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc1MjJBQjRBMUYxREZCMjAKUldRZyt4MGZTcXNpZFFZdDY3cy9vcWcvNDhDdmtkMVJMbUhZclB6dmpkUnBGUzBkTWZBVlVIMUwK",
            "endpoints": [
                "https://github.com/Ho3einWave/better-dns-jumper/releases/latest/download/latest.json"
            ]
        }
    }
}